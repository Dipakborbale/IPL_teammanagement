<!-- Team Details Container -->
<% const teamName = players.length > 0 ? players[0].teamName : ''; %>
<% if (teamDetails.hasOwnProperty(teamName)) { %>
    <div class="team-details-container">
        <div id="<%= teamName %>_details" class="team-detail-text">
            <div class="team-name">
                <h2><%= teamName %></h2>
                <a href="<%= teamDetails[teamName].officialSite %>" target="_blank" class="official-site-btn">Official Team Site</a>
            </div>
            <div class="logo-trophy-details">
                <div class="logo">
                    <img src="<%= teamDetails[teamName].logo %>" alt="Team Logo">
                </div>
                <div class="trophy-details">
                    <img src="https://www.iplt20.com/assets/images/team-trophy.png" alt="Trophy Icon">
                    <span><%= teamDetails[teamName].trophies %></span>
                </div>
            </div>
            <div class="team-info">
                <div class="detail-row">
                    <p><span style="color: yellow; font-weight: bold; font-family: 'Poppins', sans-serif;">Captain:</span> <strong style="color: white; font-family: 'Poppins', sans-serif;"><%= teamDetails[teamName].captain %></strong></p>
                </div>
                <div class="detail-row">
                    <p><span style="color: yellow; font-weight: bold; font-family: 'Poppins', sans-serif;">Owner:</span> <strong style="color: white; font-family: 'Poppins', sans-serif;"><%= teamDetails[teamName].owner %></strong></p>
                </div>
                <div class="detail-row">
                    <p><span style="color: yellow; font-weight: bold; font-family: 'Poppins', sans-serif;">Coach:</span> <strong style="color: white; font-family: 'Poppins', sans-serif;"><%= teamDetails[teamName].coach %></strong></p>
                </div>
                <div class="detail-row">
                    <p><span style="color: yellow; font-weight: bold; font-family: 'Poppins', sans-serif;">Venue:</span> <strong style="color: white; font-family: 'Poppins', sans-serif;"><%= teamDetails[teamName].venue %></strong></p>
                </div>
            </div>
            
        </div>
    </div>
<% } %>
<div class="mt-5"></div> <!-- Add spacing here -->


<div class="bottom-section-main">
    <div class="container">
        <h2 class="text-center">SQUAD</h2> 
        <div class="row row-cols-1 row-cols-md-5"> <!-- Specify the number of columns here -->
            <% for (const player of players) { %>
                <div class="col mb-4"> <!-- Adjust margin here -->
                    <div class="card h-100"> <!-- Adjust card height here -->
                        <div class="position-relative">
                            <!-- Player Image -->
                            <img src="/uploads/<%= player.image %>" class="card-img-top" alt="<%- player.name %>">
                            <!-- Role Icon -->
                            <div class="teams-icon">
                                <% if (player.Role === 'Batsman') { %>
                                    <span>
                                        <img src="https://www.iplt20.com/assets/images/teams-batsman-icon.svg" alt="Batsman">
                                    </span>
                                <% } else if (player.Role === 'Bowler') { %>
                                    <span>
                                        <img src="https://www.iplt20.com/assets/images/teams-bowler-icon.svg" alt="Bowler">
                                    </span>
                                <% } else if (player.Role === 'Allrounder') { %>
                                    <span>
                                        <img src="https://www.iplt20.com/assets/images/teams-all-rounder-icon.svg" alt="All-rounder">
                                    </span>
                                <% } else if (player.Role === 'WK Keeper batsman') { %>
                                    <span>
                                        <img src="https://www.iplt20.com/assets/images/teams-wicket-keeper-icon.svg" alt="WK Keeper batsman">
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= player.name %></h5>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#playerModal_<%= player._id %>">View Details</button>
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="playerModal_<%= player._id %>" tabindex="-1" role="dialog" aria-labelledby="playerModalLabel_<%= player._id %>" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="playerModalLabel_<%= player._id %>"><%= player.name %></h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body" style="padding-bottom: 20px;"> <!-- Add padding-bottom -->
                                        <!-- Player Image -->
                                        <img src="/uploads/<%= player.image %>" class="card-img-top" alt="<%- player.name %>">
                                        <!-- Player Details -->
                                        <p><strong>Name:</strong> <%= player.name %></p>
                                        <p><strong>Country:</strong> <%= player.Country %></p>
                                        <p><strong>Age:</strong> <%= player.Age %></p>
                                        <p><strong>Role:</strong> <%= player.Role %></p>
                                        <p><strong>Team Name:</strong> <%= player.teamName %></p>
                                        <!-- Trophy Section -->
                                        <!-- <div class="vn-trophyBtn">
                                            <img src="https://www.iplt20.com/assets/images/team-trophy.png" alt="">
                                            <span>2012, 2014</span>
                                        </div> -->
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>





